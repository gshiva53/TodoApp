todo.guptashiva.dev {
	encode gzip zstd

	@backend {
		path /backend/todoitems/*
		path /backend/register
		path /backend/login
		path /backend/logout
		path /backend/openapi/*
	}

	handle @backend {
		reverse_proxy localhost:5000
	}

	# HTTPS for the backend service
	#	handle /todoitems/* {
	#		reverse_proxy localhost:5000
	#	}

	# HTTPS for the frontend service
	handle {
		reverse_proxy localhost:3001
	}

	log {
		level INFO
		format console
	}
}
